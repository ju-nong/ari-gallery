{
    "name": "learn-vite",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite --mode dev --host 0.0.0.0 --port 4000",
        "prd": "vite --mode prd --host 0.0.0.0 --port 4000",
        "build-dev": "tsc && vite build --mode dev --outDir dist/dev",
        "build-prd": "tsc && vite build --mode prd --outDir dist/prd",
        "build-all": "npm run build-dev && npm run build-prd",
        "build": "tsc && vite build",
        "preview": "vite preview"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@types/node": "^18.14.6",
        "@types/react": "^18.0.27",
        "@types/react-dom": "^18.0.10",
        "@vitejs/plugin-react": "^3.1.0",
        "typescript": "^4.9.3",
        "vite": "^4.1.0"
    }
}
